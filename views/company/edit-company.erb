						  <option value="IN" <%= 'selected' if @company.state == 'IN' %>>IN</option>
						  <option value="IA" <%= 'selected' if @company.state == 'IA' %>>IA</option>
						  <option value="KS" <%= 'selected' if @company.state == 'KS' %>>KS</option>
						  <option value="KY" <%= 'selected' if @company.state == 'KY' %>>KY</option>
