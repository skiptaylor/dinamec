						  <option value="AR" <%= 'selected' if @company.state == 'AR' %>>AR</option>
						  <option value="CA" <%= 'selected' if @company.state == 'CA' %>>CA</option>
						  <option value="CO" <%= 'selected' if @company.state == 'CO' %>>CO</option>
