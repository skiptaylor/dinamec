						  <option value="MD" <%= 'selected' if @company.state == 'MD' %>>MD</option>
						  <option value="MA" <%= 'selected' if @company.state == 'MA' %>>MA</option>
						  <option value="MI" <%= 'selected' if @company.state == 'MI' %>>MI</option>
						  <option value="MN" <%= 'selected' if @company.state == 'MN' %>>MN</option>
						  <option value="MS" <%= 'selected' if @company.state == 'MS' %>>MS</option>
						  <option value="MO" <%= 'selected' if @company.state == 'MO' %>>MO</option>
						  <option value="MT" <%= 'selected' if @company.state == 'MT' %>>MT</option>
						  <option value="NE" <%= 'selected' if @company.state == 'NE' %>>NE</option>
						  <option value="NV" <%= 'selected' if @company.state == 'NV' %>>NV</option>
						  <option value="NH" <%= 'selected' if @company.state == 'NH' %>>NH</option>
						  <option value="NJ" <%= 'selected' if @company.state == 'NJ' %>>NJ</option>
						  <option value="NM" <%= 'selected' if @company.state == 'NM' %>>NM</option>
						  <option value="NY" <%= 'selected' if @company.state == 'NY' %>>NY</option>
						  <option value="NC" <%= 'selected' if @company.state == 'NC' %>>NC</option>
						  <option value="ND" <%= 'selected' if @company.state == 'ND' %>>ND</option>
						  <option value="OH" <%= 'selected' if @company.state == 'OH' %>>OH</option>
						  <option value="OK" <%= 'selected' if @company.state == 'OK' %>>OK</option>
