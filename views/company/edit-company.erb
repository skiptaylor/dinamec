						  <option value="VA" <%= 'selected' if @company.state == 'VA' %>>VA</option>
						  <option value="WA" <%= 'selected' if @company.state == 'WA' %>>WA</option>
						  <option value="WV" <%= 'selected' if @company.state == 'WV' %>>WV</option>
						  <option value="WI" <%= 'selected' if @company.state == 'WI' %>>WI</option>
						  <option value="WY" <%= 'selected' if @company.state == 'WY' %>>WY</option>
					  </select>
				  </div>
			  </div>
			  <div class="form-group">
			    <label for="zip" class="col-sm-2 control-label">Zip</label>
			    <div class="col-sm-4">
			      <input type="text" class="form-control" id="zip" name="zip" placeholder="Zip" value="<%= @company.zip %>">
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="phone" class="col-sm-2 control-label">Phone</label>
