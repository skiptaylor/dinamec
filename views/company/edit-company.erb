				  <label for="machine" class="col-sm-2 control-label">Machine</label>
				  <div class="col-sm-4">
					  <select type="text" id="machineid" name="machineid" class="form-control">
						  <% @machine = Machine.all %>
						  <% @machine.each do |machine| %>
						  <option value="<%= machine.id %>" <%= 'selected' if @company.machine_id == machine.id %>><%= machine.name %></option>
						  <% end %>
					  </select>
				  </div>
			  </div>
			  
