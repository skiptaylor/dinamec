			    <div class="col-sm-offset-2 col-sm-10">
			      <div class="checkbox">
			        <label>
			          <input type="checkbox" name="active" id="active" <%= 'checked="checked"' if @company.active %> /> <strong>Active</strong>
			        </label>
			      </div>
			    </div>
			  </div>
			  <br />
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      <button type="submit" class="btn btn-success btn-sm">Save</button> &nbsp; <a class="btn btn-sm btn-default" href="/companies">Cancel</a> &nbsp; <a class="btn btn-sm btn-warning delete" href="/<%= @company.id %>/delete-company">Delete</a>
			    </div>
			  </div>
			</form>
			</div>
		</div>
	</div>
</div>
