<div class="white-ground">
	<div class="container">
		<img src="/img/dinamec-logo-notag.png" style="width: 180px; margin-top: 24px;">
	</div>
	<div class="container master-padding">
		<a class="btn btn-sm btn-default pull-right" href="/dashboard">Dashboard</a>
		<h1 style="margin-bottom: .7em;">Companies &nbsp; <small></small></h1>
		<div class="row">
			<div class="col-md-12">
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th class="center">Active</th>
						<th>Company</th>
						<th>Website</th>
						<th>Phone</th>
						<th>Industry</th>
						<td align="right"><a href="/new-user"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a></td>
					</tr>
					<% @company.each do |company| %>
					<tr>
						<td class="center"><% if company.active %><span style="color: #3aa839;" class="glyphicon glyphicon-check" aria-hidden="true"></span><% else %><span style="color: #b5b5b5;" class="glyphicon glyphicon-unchecked" aria-hidden="true"></span><% end %></td>
						<td><strong><%= company.company %></strong> <small><%= company.id %></small></td>
						<td><%= company.website %></td>
						<td><%= company.phone %></td>
						<td><%= company.industry %></td>
						<td style="text-align: right;"><span class="under-link"><a href="/<%= company.id %>/edit-company"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></span></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
