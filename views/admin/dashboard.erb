<script type="text/javascript">
	$('.link-row').click(function() {
		window.location = $(this).attr('id');
	});

	$('td.read-link[data-status="true"]').hide();
	
	$('#read-list-toggle button').click(function() {
		$('#read-list-toggle button').removeClass('Unread');
		$(this).addClass('Unread');
		var status = $(this).attr('data-toggle');
		$('.read-link').hide();
		$('.read-link[data-status="' + status + '"]').show();
		return false;
	});
</script>