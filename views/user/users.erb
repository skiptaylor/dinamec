<div class="white-ground">
	<div class="container">
		<h2 style="font-size: 2em; letter-spacing: -1px;">Dinamec<span style="font-weight: 300; color: #95989c;">Systems</span></h2>
	</div>
	<div class="container master-padding">
		<h1 style="margin-bottom: .7em;">Users &nbsp; <small></small></h1>
		<div class="row">
			<div class="col-md-12">
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Username</th>
						<td align="right"><a href="/user/new"><i class="icon-plus"></i> New</a></td>
					</tr>
					<% @user.each do |user| %>
					<tr>
						<td><%= user.first_name %> <%= user.last_name %></td>
						<td><%= user.email %></td>
						<td><%= user.username %></td>
						<td style="text-align: right;"><span class="under-link"><a href="/user/<%= user.id %>/edit">Edit</a></span></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>

