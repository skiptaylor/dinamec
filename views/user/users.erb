<div class="white-ground">
	<div class="container">
		<img src="/img/dinamec-logo-notag.png" style="width: 180px; margin-top: 24px;">
	</div>
	<div class="container master-padding">
		<a class="btn btn-sm btn-default pull-right" href="/dashboard">Dashboard</a>
		<h1 style="margin-bottom: .7em;">Users &nbsp; <small></small></h1>
		<div class="row">
			<div class="col-md-12">
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th class="center">Active</th>
						<th>Name</th>
						<th>Company</th>
						<th>Email</th>
						<th>Phone</th>
						<th>User</th>
						<td align="right"><a href="/new-user"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a></td>
					</tr>
					<% @user.each do |user| %>
					<tr>
						<td class="center"><% if user.active %><span style="color: #3aa839;" class="glyphicon glyphicon-check" aria-hidden="true"></span><% else %><span style="color: #b5b5b5;" class="glyphicon glyphicon-unchecked" aria-hidden="true"></span><% end %></td>
						<td><%= user.first_name %> <%= user.last_name %> <small>- <%= user.title %></small></td>
						<td>
						  <% Company.each do |company| %>
						  <% if user.company_id == company.id %><%= company.company %><% end %>
						  <% end %>
						</td>
						<td><%= user.email %></td>
						<td><%= user.phone1 %></td>
						<td><%  if user.user_type == 'Admin' %>Admin<% elsif user.user_type == 'Customer' %>Customer<% else %> <% end %></td>
						<td style="text-align: right;"><span class="under-link"><a href="/<%= user.id %>/edit-user"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></span></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>

