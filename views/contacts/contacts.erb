<div class="white-ground">
	<div class="container">
		<img src="/img/dinamec-logo-notag.png" style="width: 180px; margin-top: 24px;">
	</div>
	<div class="container master-padding">
		<a class="btn btn-sm btn-default pull-right" href="/dashboard">Dashboard</a>
		<h1 style="margin-bottom: .7em;">Contact Us Responses</h1>
		<div class="row">
			<div class="col-md-12">
				<table class="table table-striped table-condensed table-hover table-bordered">
					<tr>
						<th>Date</th>
						<th>Name</th>
						<th>Company</th>
						<th> </th>
					</tr>
					<% @contact = Contact.all %>
					<% @contact.each do |contact| %>
					<tr>
						<td><%= contact.date.strftime("%B %d, %Y") %></td>
						<td><%= contact.name %></td>
						<td><%= contact.company %></td>
						<td style="text-align: right;"><a href="/contacts/<%= contact.id %>/edit-contact"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
