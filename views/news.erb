<img src="/img/ribbon.png" style="position: absolute; right: 3%; top: 44px; z-index: 1000; width: 170px;" class="hidden-xs" />

<div class="white-ground">
	<div id="tag">
		<div class="container">
			<img src="/img/dinamec-logo-notag.png" style="width: 180px; margin-top: 14px;">
			<img src="/img/fluid-clean-logo.png" class="border shadow hidden-xs" style="width: 180px; padding-top: 8px; margin-top: 16px; margin-left: 62px;" />
		</div>
		
		<div class="top-bar" style="margin-top: 12px; font-size: 0.45em;">&nbsp;</div>
	</div>			

		<div class="container">
			<div class="row">
				<div class="col-md-4" style="margin-top: 0; margin-bottom: 3em;">
					<img src="/img/fluid-clean-logo.png" class="border shadow visible-xs" style="width: 180px; padding-top: 8px; margin-top: 16px;" />
					<h1>News</h1>
					<% Article.all.sort{|a,b| b.date <=> a.date}.each do |article| %>
						<p class="news-date"><%= article.date.strftime("%B %d, %Y") %></p>
						<a href="<%= article.id %>" class="news-link under-link"><%= article.title %></a>
					<% end %>
				</div>
				<div class="col-md-8" style="margin-top: 3em; margin-bottom: 3em;">
					
					<p><%= @article.date.strftime("%B %d, %Y") %></p>
					<hr />
					<h4 style="font-size: 2em;"><%= @article.title %></h4>
					<% unless @article.author == "" %>
				   	<p style="margin: -12px 0;"><em><%= Kramdown::Document.new(@article.author).to_html %></em></p>
					<% end %>
					<%= Kramdown::Document.new(@article.content).to_html %>
				</div>
			</div
		
		</div>
	</div>
</div>
