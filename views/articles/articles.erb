<div class="white-ground">
	<div class="container">
		<h2 style="font-size: 2em; letter-spacing: -1px;">Dinamec<span style="font-weight: 300; color: #95989c;">Systems</span></h2>
	</div>
	<div class="container master-padding">
		<h1 style="margin-bottom: .7em;">News Articles</h1>
		<div class="row">
			<div class="col-md-12">
				<table class="table table-striped table-condensed table-hover table-bordered">
					<tr>
						<th>Date</th>
						<th>Title</th>
						<th>Author</th>
						<th style="text-align: right;"><a href="/articles/new-article"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a></th>
					</tr>
					<% @article = Article.all %>
					<% @article.each do |article| %>
					<tr>
						<td><%= article.date.strftime("%B %d, %Y") %></td>
						<td><%= article.title %></td>
						<td><%= article.author %></td>
						<td style="text-align: right;"><a href="/articles/<%= article.id %>/edit-article"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
