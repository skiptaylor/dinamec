<div class="white-ground">
	<div class="container">
		<img src="/img/dinamec-logo-notag.png" style="width: 180px; margin-top: 24px;">
	</div>
	<div class="container master-padding">
		<p class="pull-right">
			<a class="btn btn-sm btn-default" href="/parts/orders">Orders</a>
		</p>
		<h1 style="margin-bottom: .7em;">Order <%= @order = Order.get(params[:order_id]).id %></h1>
		<hr />
		<div class="row">
			<div class="col-md-6">
			<form class="form-horizontal" method="post">
			  
			  
			  <div class="form-group">
			    <label for="po_number" class="col-sm-2 control-label">PO Number</label>
			    <div class="col-sm-4">
			      <input type="text" class="form-control" id="po_number" name="po_number" placeholder="PO Number" value="<%= @order.po_number %>">
			    </div>
			  </div>
			  
			  
			  <div class="form-group">
			    <label for="comment" class="col-sm-2 control-label">Comment</label>
			    <div class="col-sm-4">
			      <input type="text" class="form-control" id="comment" name="comment" placeholder="Comment" value="<%= order.comment %>">
			    </div>
			  </div>
			  
			  
			  
			  
			  
			  <div class="form-group">
				  <label for="company" class="col-sm-2 control-label">Machine</label>
				  <div class="col-sm-8">
					  <select type="text" id="companyid" name="companyid" class="form-control">
						  <% @machibne = Machine.all %>
						  <% @machine.each do |machine| %>
						  <option value="<%= machine.id %>" <%= 'selected' if @order.machine_id == machine.id %>><%= machine.name %></option>
						  <% end %>
					  </select>
				  </div>
			  </div>
			  

			  
			  
			  <br />
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-6">
			      <button type="submit" class="btn btn-success btn-sm">Save</button> <!-- &nbsp; <a class="btn btn-sm btn-default" href="/order/machines">Cancel</a> &nbsp;  --><a class="btn btn-sm btn-warning delete" href="/parts/<%= @order.id %>/delete-order">Delete</a>
			    </div>
			  </div>
			</form>
			</div>
			<div class="col-md-6">
				<a href="/machines/<%= @machine.id %>/parts" class="btn btn-primary btn-sm">Manage Parts</a>
			</div>
		</div>
	</div>
</div>



