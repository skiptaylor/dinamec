<div class="white-ground">
	<div class="container">
		<img src="/img/dinamec-logo-notag.png" style="width: 180px; margin-top: 24px;">
	</div>
	<div class="container master-padding">
		<p class="pull-right"><a class="btn btn-sm btn-default" href="/dashboard">Dashboard</a></p>
		<h1 style="margin-bottom: .7em;">Machines</h1>
		<div class="row">
			<div class="col-md-12">
				<table class="table table-striped table-condensed table-hover table-bordered">
					<tr>
						<th>Machine</th>
						<th>Client</th>
						<th>Quote Requests</th>
						<th style="text-align: center;">View</th>
						<td align="center"><a href="/machines/new-machine"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a></td>
					</tr>
						<% @company = Company.all %>
						<% @machine.each do |machine| %>
						<tr>
						<td><%= machine.name %></td>
						<td><% @company.each do |company| %><% if machine.company_id == company.id %><%= company.company %><% end %><% end %></td>
						<td>&nbsp;&nbsp;<span class="badge orange-ground">&nbsp;<%= machine.orders(:status => "Requested").count %>&nbsp;</span>&nbsp; <small>Requested</small> &nbsp; &nbsp;<span class="badge blue-ground">&nbsp;<%= machine.orders(:status => "Quoted").count %>&nbsp;</span>&nbsp; <small>Quoted</small> &nbsp; &nbsp;<span class="badge green-ground">&nbsp;<%= machine.orders(:status => "Ordered").count %>&nbsp;</span>&nbsp; <small>Ordered</small> &nbsp; &nbsp;&nbsp;<a href="/machines/<%= machine.id %>/orders" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-th-list red" aria-hidden="true"></span> &nbsp;Quote Requests</a></td>
						<td style="text-align: center;"><span class="under-link"><a href="/machines/<%= machine.id %>/machine"><span class="glyphicon glyphicon-eye-open green" aria-hidden="true"></span></a></span></td>
						<td style="text-align: center;"><span class="under-link"><a href="/machines/<%= machine.id %>/edit-machine"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></span></td>
						
						<% end %>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>


