<div class="white-ground">
	<div class="container">
		<h2 style="font-size: 2em; letter-spacing: -1px;">Dinamec<span style="font-weight: 300; color: #95989c;">Systems</span></h2>
	</div>
	<div class="container master-padding">
		<a class="btn btn-sm btn-default pull-right" href="/dashboard">Dashboard</a>
		<h1 style="margin-bottom: .7em;">Machines &nbsp; <small></small></h1>
		<div class="row">
			<div class="col-md-12">
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Name</th>

						<td align="right"><a href="/machines/new-machine"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a></td>
					</tr>
					<% @machine.each do |machine| %>
					<tr>
						
						<td><strong><%= machine.name %></strong></td>

						<td style="text-align: right;"><span class="under-link"><a href="/machines/<%= machine.id %>/edit-machine"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></span></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
