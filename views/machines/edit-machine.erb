<div class="white-ground">
	<div class="container">
		<h2 style="font-size: 2em; letter-spacing: -1px;">Dinamec<span style="font-weight: 300; color: #95989c;">Systems</span></h2>
	</div>
	<div class="container master-padding">
		<p class="pull-right"><a class="btn btn-sm btn-default" href="/machines/machines">Machines</a> &nbsp; <a class="btn btn-sm btn-default" href="/dashboard">Dashboard</a></p>
		<h1 style="margin-bottom: .7em;">Machine</h1>
		<hr />
		<div class="row">
			<div class="col-md-6">
			<form class="form-horizontal" method="post">
			  <div class="form-group">
			    <label for="name" class="col-sm-2 control-label">Name</label>
			    <div class="col-sm-8">
			      <input type="text" class="form-control" id="name" name="name" placeholder="Machine Name" value="<%= @machine.name %>">
			    </div>
			  </div>
			  <div class="form-group">
				  <label for="company" class="col-sm-2 control-label">Company</label>
				  <div class="col-sm-8">
					  <select type="text" id="companyid" name="companyid" class="form-control">
						  <% @company = Company.all %>
						  <% @company.each do |company| %>
						  <option value="<%= company.id %>" <%= 'selected' if @machine.company_id == company.id %>><%= company.company %></option>
						  <% end %>
					  </select>
				  </div>
			  </div>
			  <br />
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-6">
			      <button type="submit" class="btn btn-success btn-sm">Save</button> &nbsp; <a class="btn btn-sm btn-default" href="/machines/machines">Cancel</a> &nbsp; <a class="btn btn-sm btn-warning delete" href="/machines/<%= @machine.id %>/delete-machine">Delete</a>
			    </div>
			  </div>
			</form>
			</div>
			<div class="col-md-6">
				<!-- <a href="/machines/<%= @machine.id %>/parts" class="btn btn-primary btn-sm">Manage Parts</a> -->
			</div>
		</div>
	</div>
</div>
